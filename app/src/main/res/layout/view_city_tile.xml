<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cityTileView"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cityImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@color/colorAccent"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shade"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="#AA000000"
        app:layout_constraintBottom_toBottomOf="@id/cityImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cityNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/shade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/shade"
        tools:text="BiaÅ‚ystok" />
</androidx.constraintlayout.widget.ConstraintLayout>